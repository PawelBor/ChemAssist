<Page
    x:Class="ChemistryAssistant.ErrorCalculator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChemistryAssistant"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Pivot x:ConnectionId='1' x:Name="rootPivot" Background="#C1CDCD" Title="Experimental Error Calculator">

            <PivotItem Header="ERROR FORMULA">

                <ScrollViewer Grid.Column="0" Grid.Row="0"  VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" ZoomMode="Enabled" >
                    <StackPanel Background="#E0EEEE" Grid.Column="0" Grid.Row="0">
                        <TextBlock Text="ERROR FORMULA: " FontSize="20" HorizontalAlignment="Center" FontWeight="Bold" TextWrapping="WrapWholeWords"></TextBlock>
                        <TextBlock Text="Formula: Error = Experimental Value - Known Value" HorizontalAlignment="Center"></TextBlock>
                        <TextBox x:ConnectionId='21' x:Name="expValueInput" HorizontalAlignment="Center" InputScope="Number" PlaceholderText="Experimental Value" Width="200" Margin="0,10,0,0" ></TextBox>
                        <TextBox x:ConnectionId='22' x:Name="knownValueInput" HorizontalAlignment="Center" Width="200" PlaceholderText="Known Value" Margin="0,10,0,0" ></TextBox>
                        <Button x:ConnectionId='23' x:Name="btnCalculateError" HorizontalAlignment="Center" Width="200" Margin="0,10,0,0" Content="Calculate"                                  ></Button>
                        <TextBlock x:ConnectionId='24' x:Name="errorResult" HorizontalAlignment="Center" Text="Error Result" Width="200" FontSize="30" Margin="0,20,0,0" ></TextBlock>
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button x:ConnectionId='27' x:Name="AddError" Content="Add" Margin="5,0,5,0"                          ></Button>
                            <Button x:ConnectionId='28' x:Name="ShowAllError" Content="Show All" Margin="5,0,5,0"                              ></Button>

                            <Button x:ConnectionId='29' x:Name="DeleteAllError" Content="Delete All" Margin="5,0,5,0"                                ></Button>
                            <Button x:ConnectionId='30' x:Name="ShareError" Content="Share" Margin="5,0,5,0"                           />
                        </StackPanel>

                        <ListBox x:ConnectionId='25' x:Name="retrieveDataError" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                       Width="Auto" Height="150" ItemsSource="{Binding}" Margin="0 10 0 0"/>

                        <TextBlock x:ConnectionId='26' x:Name="selListBoxValError" HorizontalAlignment="Center" Width="Auto" Margin="0 10 0 0"
                           Height="Auto" FontFamily="Century Gothic" FontStyle="Italic" Foreground="Red" />
                    </StackPanel>
                </ScrollViewer>

            </PivotItem>

            <PivotItem Header="Relative Error">
                <ScrollViewer Grid.Column="0" Grid.Row="1"  VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" ZoomMode="Enabled" >
                    <StackPanel Background="#E0EEEE" Grid.Column="0" Grid.Row="1">
                        <TextBlock Text="Relative Error Formula " FontSize="20" HorizontalAlignment="Center" FontWeight="Bold" TextWrapping="WrapWholeWords"></TextBlock>
                        <TextBlock Text="Relative Error = Error / Known Value" HorizontalAlignment="Center"></TextBlock>
                        <TextBox x:ConnectionId='11' x:Name="relativeErrorValueInput" HorizontalAlignment="Center" InputScope="Number" PlaceholderText="Error" Width="200" Margin="0,10,0,0" ></TextBox>
                        <TextBox x:ConnectionId='12' x:Name="relativeKnownValueInput" HorizontalAlignment="Center" Width="200" PlaceholderText="Known Value" Margin="0,10,0,0" ></TextBox>
                        <Button x:ConnectionId='13' x:Name="btnRelativeCalculateError" HorizontalAlignment="Center" Width="200" Margin="0,10,0,0" Content="Calculate"                                           ></Button>
                        <TextBlock x:ConnectionId='14' x:Name="relativeErrorResult" HorizontalAlignment="Center" Text="Relative Error" Width="200" FontSize="30" Margin="0,20,0,0" ></TextBlock>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button x:ConnectionId='17' x:Name="AddRelative" Content="Add" Margin="5,0,5,0"                              ></Button>
                            <Button x:ConnectionId='18' x:Name="ShowAllRelative" Content="Show All" Margin="5,0,5,0"                                  ></Button>

                            <Button x:ConnectionId='19' x:Name="DeleteAllReltive" Content="Delete All" Margin="5,0,5,0"                                   ></Button>
                            <Button x:ConnectionId='20' x:Name="ShareRelative" Content="Share" Margin="5,0,5,0"                               />
                        </StackPanel>


                        <ListBox x:ConnectionId='15' x:Name="retrieveDataRelative" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                       Width="Auto" Height="150" ItemsSource="{Binding}" Margin="0 10 0 0"/>

                        <TextBlock x:ConnectionId='16' x:Name="selListBoxValRelative" HorizontalAlignment="Center" Width="Auto" Margin="0 10 0 0"
                           Height="Auto" FontFamily="Century Gothic" FontStyle="Italic" Foreground="Red" />
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>
            <PivotItem Header="Percent Error Formula">
                <ScrollViewer Grid.Column="0" Grid.Row="2"  VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" ZoomMode="Enabled" >
                    <StackPanel Background="#E0EEEE" Grid.Column="0" Grid.Row="2">
                        <TextBlock Text="% Error Formula " FontSize="20" HorizontalAlignment="Center" FontWeight="Bold" TextWrapping="WrapWholeWords"></TextBlock>
                        <TextBlock Text="% Error = Relative Error x 100%" HorizontalAlignment="Center"></TextBlock>

                        <TextBox x:ConnectionId='2' x:Name="percentRelativeErrorValueInput" HorizontalAlignment="Center" Width="200" PlaceholderText="Relative Error" Margin="0,10,0,0" ></TextBox>
                        <Button x:ConnectionId='3' x:Name="btnPercentError" HorizontalAlignment="Center" Width="200" Margin="0,10,0,0" Content="Calculate"                                  ></Button>
                        <TextBlock x:ConnectionId='4' x:Name="percentErrorResultValue" HorizontalAlignment="Center" Text="% Error" Width="200" FontSize="30" Margin="0,20,0,0" ></TextBlock>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button x:ConnectionId='7' x:Name="AddPercent" Content="Add" Margin="5,0,5,0"                              ></Button>
                            <Button x:ConnectionId='8' x:Name="ShowAllPercent" Content="Show All" Margin="5,0,5,0"                                 ></Button>

                            <Button x:ConnectionId='9' x:Name="DeleteAllPercent" Content="Delete All" Margin="5,0,5,0"                                    ></Button>
                            <Button x:ConnectionId='10' x:Name="SharePercent" Content="Share" Margin="5,0,5,0"                               />
                        </StackPanel>

                        <ListBox x:ConnectionId='5' x:Name="retrieveDataPercentage" HorizontalAlignment="Center" VerticalAlignment="Bottom"
                       Width="Auto" Height="150" ItemsSource="{Binding}" Margin="0 10 0 0"/>

                        <TextBlock x:ConnectionId='6' x:Name="selListBoxValPercentage" HorizontalAlignment="Center" Width="Auto" Margin="0 10 0 0"
                           Height="Auto" FontFamily="Century Gothic" FontStyle="Italic" Foreground="Red" />
                    </StackPanel>
                </ScrollViewer>
            </PivotItem>
        </Pivot>
    </Grid>
</Page>

