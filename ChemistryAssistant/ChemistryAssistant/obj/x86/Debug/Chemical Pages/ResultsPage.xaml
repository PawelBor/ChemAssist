    <Grid x:ConnectionId='1' Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" x:Name="MainGrid">
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:ConnectionId='2' x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="720" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainGrid.Margin" Value="24"/>
                        <Setter Target="MainGrid.RowDefinitions[1].Height" Value="1.5*"/> <!--auto-->
                        <Setter Target="MainGrid.ColumnDefinitions[1].Width" Value="auto"/> <!--*-->
                        <Setter Target="FirstGrid.Margin" Value="0 0 6 0"/>
                        <Setter Target="SecondGrid.Margin" Value="25 0 25 0"/>
                        <Setter Target="SecondGrid.(Grid.Column)" Value="0"/>
                        <Setter Target="SecondGrid.(Grid.Row)" Value="1"/>
                    </VisualState.Setters>
                </VisualState>
                <VisualState x:ConnectionId='3' x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="MainGrid.Margin" Value="12"/>
                        <Setter Target="FirstGrid.Margin" Value="0 0 0 0"/>
                        <Setter Target="SecondGrid.Margin" Value="6 0 0 6"/>
                        <Setter Target="MainGrid.RowDefinitions[1].Height" Value="1.5*"/>
                        <Setter Target="MainGrid.ColumnDefinitions[1].Width" Value="auto"/>
                        <Setter Target="SecondGrid.(Grid.Column)" Value="0"/>
                        <Setter Target="SecondGrid.(Grid.Row)" Value="1"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>



        <Grid x:ConnectionId='4' x:Name="FirstGrid" Grid.Column="0" Grid.Row="0" Background="#C1CDCD">


            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" >
                <StackPanel Grid.Row="0" Grid.Column="0">
                    <TextBlock x:ConnectionId='7' x:Name="title" FontSize="24" FontFamily="Ash" Grid.Row="1" FontWeight="Bold" Margin="0,20,0,0" HorizontalAlignment="Center" VerticalAlignment="Top" TextWrapping="Wrap" Text="TITLE"/>
                    <Image x:ConnectionId='8' x:Name="image1" MaxHeight="400" MaxWidth="400" Grid.Row="0"  HorizontalAlignment="Center" Height="300"  Margin="0,20,0,0" VerticalAlignment="Top" Width="300"/>
                </StackPanel>
            </ScrollViewer>

        </Grid>
        <Grid x:ConnectionId='5' x:Name="SecondGrid" Grid.Column="1" Grid.Row="0" Background="#E0EEEE">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" >
                <StackPanel MaxWidth="700" Grid.Row="1" Grid.Column="0">
                    <TextBlock x:ConnectionId='6' x:Name="extract" Grid.Row="1" Margin="10,0,10,0"  HorizontalAlignment="Stretch" FontFamily="Ash" TextWrapping="Wrap" Text="Exract" />
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>



</Page>



