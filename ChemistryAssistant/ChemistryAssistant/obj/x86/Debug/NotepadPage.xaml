<Page
    x:Class="ChemistryAssistant.NotepadPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ChemistryAssistant"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#F0F8FF">
        <Grid BorderBrush="Gray" BorderThickness="1">
            <Grid.RowDefinitions >
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center"  Background="#F8F8FF" Grid.Row="0" Orientation="Horizontal">
                <AppBarToggleButton x:ConnectionId='5' BorderBrush="Black" BorderThickness="1" Name="Bold" Foreground="#35586C" Icon="Bold" Label="Bold"                   />
                <AppBarToggleButton x:ConnectionId='6' Name="Italic" BorderBrush="Black" BorderThickness="1" Foreground="#35586C" Icon="Italic" Label="Italic"                     />
                <AppBarToggleButton x:ConnectionId='7' Name="Underline" BorderBrush="Black" BorderThickness="1" Foreground="#35586C" Icon="Underline" Label="Underline"                        />
                <ComboBox x:ConnectionId='8' Name="Size" BorderBrush="Black" BorderThickness="1" VerticalAlignment="Center" Foreground="#35586C"                                         >
                    <ComboBoxItem Content="8" Tag="8"/>
                    <ComboBoxItem Content="10" Tag="10"/>
                    <ComboBoxItem Content="12" Tag="12"/>
                    <ComboBoxItem Content="16" Tag="16"/>
                    <ComboBoxItem Content="20" Tag="20"/>
                    <ComboBoxItem Content="24" Tag="24"/>
                    <ComboBoxItem Content="28" Tag="28"/>
                    <ComboBoxItem Content="36" Tag="36"/>
                    <ComboBoxItem Content="48" Tag="48"/>
                    <ComboBoxItem Content="72" Tag="72"/>
                </ComboBox>

            </StackPanel>
            <StackPanel BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center"  Background="#F8F8FF" Grid.Row="1" Orientation="Horizontal">
                <AppBarToggleButton x:ConnectionId='2' Name="Left" BorderBrush="Black" BorderThickness="1" Foreground="#35586C" Icon="AlignLeft" Label="Left"                   />
                <AppBarToggleButton x:ConnectionId='3' Name="Centre" BorderBrush="Black" BorderThickness="1" Foreground="#35586C" Icon="AlignCenter" Label="Center"                     />
                <AppBarToggleButton x:ConnectionId='4' Name="Right" BorderBrush="Black" BorderThickness="1" Foreground="#35586C" Icon="AlignRight" Label="Right"                    />
                
            </StackPanel>
            <RichEditBox x:ConnectionId='1' Background="White" Grid.Row="2" AcceptsReturn="True" TextWrapping="Wrap" VerticalAlignment="Stretch" FontFamily="Segoe UI" FontSize="16" Name="Display"/>
        </Grid>
    </Grid>
    <Page.BottomAppBar >
        <AppBar IsOpen="True" IsSticky="True">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal"  Background="#F8F8FF">
                <AppBarButton x:ConnectionId='9' Name="New" Icon="Page" Label="New"                  />
                <AppBarButton x:ConnectionId='10' Name="Open" Icon="Folder" Label="Open"                   />
                <AppBarButton x:ConnectionId='11' Name="Save" Icon="Save" Label="Save"                   />
                
            </StackPanel>
        </AppBar>
    </Page.BottomAppBar>
</Page>

